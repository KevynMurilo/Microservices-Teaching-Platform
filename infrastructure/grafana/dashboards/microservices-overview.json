{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "HTTP Request Rate (per service)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{application=~\"order-service|payment-service|notification-service\"}[1m])",
          "legendFormat": "{{application}} - {{uri}} [{{status}}]"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        },
        "overrides": []
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "title": "HTTP Response Time (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{application=~\"order-service|payment-service|notification-service\"}[5m]))",
          "legendFormat": "{{application}} - {{uri}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "title": "JVM Memory Used",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{application=~\"order-service|payment-service|notification-service\", area=\"heap\"}",
          "legendFormat": "{{application}} - {{id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "title": "Active Threads",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "jvm_threads_live_threads{application=~\"order-service|payment-service|notification-service\"}",
          "legendFormat": "{{application}}"
        }
      ],
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    }
  ],
  "schemaVersion": 39,
  "tags": ["microservices", "spring-boot"],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "title": "Microservices Overview",
  "uid": "microservices-overview"
}
